[
    {
        "key": "product-name",
        "title": "Product Name",
        "type": "string",
        "description": "The name of the product being built. Defaults to the name of the workspace.",
        "placeholder": "Automatic",
        "default": ""
    },
    {
        "key": "package-path",
        "title": "Package",
        "type": "path",
        "description": "The package to build. Defaults to the root workspace directory.",
        "default": "",
        "placeholder": "Project Root",
        "allowFiles": false,
        "allowFolders": true
    },
    {
        "key": "sdk-path",
        "title": "Playdate SDK Path",
        "type": "path",
        "description": "The path to the Playdate SDK. Defaults to the standard location.",
        "default": "",
        "placeholder": "~/Developer/PlaydateSDK",
        "allowFiles": false,
        "allowFolders": true
    },
    {
        "key": "target",
        "title": "Target",
        "type": "enum",
        "description": "The target selected for building the project.",
        "default": "universal",
        "values": [
            ["universal", "Universal (Simulator + Device)"],
            ["simulator", "Simulator only"]
        ]
    },
    {
        "key": "extraDeviceOs",
        "title": "Extra Device .o Build Directories",
        "type": "pathArray",
        "description": "Additional paths to search for .o files when building for the device.",
        "allowFiles": false,
        "allowFolders": true
    },
    {
        "title": "Debugging",
        "type": "section",
        "children": [
            {
                "key": "allowDebug",
                "title": "Debug executable",
                "type": "boolean",
                "default": true
            },
            {
                "key": "request",
                "title": "Launch",
                "type": "enum",
                "default": "launch",
                "values": [
                    ["launch", "Automatically"],
                    ["attach", "Wait for the executable to be launched"]
                ]
            },
            {
                "key": "toolchain",
                "title": "Toolchain",
                "type": "enum",
                "default": "swiftly",
                "values": [
                    ["swiftly", "Swiftly"],
                    ["custom", "Custom"]
                ]
            },
            {
                "key": "toolchain.custom",
                "title": "Custom Toolchain Path",
                "type": "string",
                "description": "The custom path if your toolchain is set to \"Custom\", such as if you have built the toolchain from source."
            }
        ]
    }

]
